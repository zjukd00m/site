---
import BaseLayout from "../layouts/BaseLayout.astro";
import DescriptionCard from "../components/Cards/Description";
import PersonalDataCard from "../components/Cards/PersonalData";
import CurrentlyLearningCard from "../components/Cards/CurrentlyLearning";
import MyTechStack from "../components/MyTechStack";
import ExperienceCard from "../components/ExperienceCard";
import ProjectList from "../components/Projects/ProjectList";

const projects = await Astro.glob("./projects/*.md");
---

<BaseLayout title="Who Am I ?">
<div class="container" style="">
    <p class="section-title"> Who Am I ? </p>
    <div class="section-description">
        <!-- WHO AM I ? -->
        <section class="section__who-am-i">
            <!-- Personal Information Card -->
            <PersonalDataCard client:load />
            <!-- Description Card -->
            <!-- <DescriptionCard client:load /> -->
            <div>
                <p class="card-text"> 
                    I'm interested in building servers, give them some functionality using REST and GraphQL API's, 
                    build and deploy them using containers, I use both sql and no sql databases and cloud services. 
                </p>
                <br />
                <p class="card-text">
                    I might be considered a "Full Stack" developer since I know how to write apps with react.js, html and css.
                </p>
                <br />
                <p class="card-text">
                    I'd say my main skill is to be an autodidact learner using mainly books and documentation, 
                    complemented with videos from online resources.
                </p>
            </div>
            <!-- Currently Leaning Card -->
            <!-- <CurrentlyLearningCard client:load /> -->
        </section>

        <!-- TECH STACK -->
        <section>
            <MyTechStack />
        </section>
        
        <!-- EXPERIENCE -->
        <section>
            <div class="experience-layout">
                <p class="section-title"> I Have Worked At </p>
                <div class="left-section">
                    <div class="experience-top-section">
                        <div style="margin: 1rem 0 1rem 0;">
                            <ExperienceCard
                                client:load
                                title="Grutstudio" 
                                initialDate="2021"
                                endDate="present"
                                role="Backend developer"
                                descriptions={[
                                    "Building REST and GraphQL API's",
                                    "Using Google Cloud and Digital Ocean to manage instrastructure",
                                    "Creating CI/CD pipelines to automate the deployment workflow",
                                ]}
                            />
                        </div>
                    </div>
                    <p class="section-title"> Education </p>
                    <div class="experience-bottom-section">
                        <div style="margin: 1rem 0 1rem 0;">
                            <ExperienceCard 
                                client:load
                                title="UNAM FI" 
                                initialDate="2014"
                                endDate="?"
                                role="Computer Engineering"
                                descriptions={[
                                    "I'm currently a dropout student for personal reasons but I'm planning to finish my bachelor degree (I'm at the 8th semester out of 9).",
                                ]}
                            />
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- PROJECTS -->
        <section>
            <div class="container">
                <p class="section-title"> Projects </p>
                <p class="section-description">
                    I've done some self side projects to improve my knowledge by making front-end and back-end 
                    development on my own.
                </p>
                <ProjectList client:idle projects={projects} />
            </div>
        </section>
    </div>
</div>
</BaseLayout>
