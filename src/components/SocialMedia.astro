---
export interface Props {
    name: string;
    url: string;
    link: string;
}

const { name, url, link } = Astro.props;
---

<div class="media-wrapper">
    <a href={link} target="_blank">
        <img alt={name} src={url} />
    </a>
</div>

<style>
    .media-wrapper > a > img {
        height: 60px;
        width: 60px;
    }

    @media only screen and (max-width: 1440px) {
        .media-wrapper > a > img {
            height: 50px;
            width: 50px;
        }
    }

    @media only screen and (max-width: 768px) {
        .media-wrapper > a > img {
            height: 40px;
            width: 40px;
        }
    }
</style>